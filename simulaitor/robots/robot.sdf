<?xml version="1.0"?>
<sdf version="1.8">
  <model name="square_robot">
    <static>false</static>

    <!-- Base -->
    <link name="base_link">
      <pose>0 0 0.1 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.4 0.4 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.4 0.4 0.2</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Left wheel -->
    <link name="wheel_left">
      <pose>0 0.2 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="wheel_left_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_left_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Right wheel -->
    <link name="wheel_right">
      <pose>0 -0.2 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="wheel_right_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_right_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Joints -->
    <joint name="wheel_left_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_left</child>
      <pose>0 0.2 -0.1 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>5</effort>
          <velocity>10</velocity>
        </limit>
      </axis>
    </joint>

    <joint name="wheel_right_joint" type="revolute">
      <parent>base_link</parent>
      <child>wheel_right</child>
      <pose>0 -0.2 -0.1 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>5</effort>
          <velocity>10</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Plugin ros2_control -->
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <ros2_control>
        <hardware>
          <plugin>gazebo_ros2_control/DefaultRobotHWSim</plugin>
        </hardware>

        <controller name="diff_drive_controller" type="diff_drive_controller/DiffDriveController">
          <joint_left>wheel_left_joint</joint_left>
          <joint_right>wheel_right_joint</joint_right>
          <wheel_separation>0.4</wheel_separation>
          <wheel_radius>0.05</wheel_radius>
          <cmd_vel_timeout>0.5</cmd_vel_timeout>
          <use_stamped_vel>false</use_stamped_vel>
        </controller>
      </ros2_control>
    </plugin>

  </model>
</sdf>

